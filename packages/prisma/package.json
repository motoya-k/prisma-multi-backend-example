{
    "name": "@pmbe/prisma",
    "private": true,
    "scripts": {
        "build": "prisma generate && tsc --declaration",
        "studio": "prisma studio",
        "schema:merge": "prisma-merge --baseFile models/base.prisma --schemaFilePatterns 'models/**/*.prisma' --outputFile prisma/schema.prisma",
        "migrate:apply": "prisma migrate dev",
        "migrate:create": "prisma migrate dev --create-only",
        "migrate:reset": "prisma migrate reset",
        "migrate:deploy": "prisma migrate deploy",
        "migrate:squash": "echo not implemented...",
        "migrate:resolve": "prisma migrate resolve",
        "seed:apply": "ts-node seeds/all.ts"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "devDependencies": {
        "@types/chance": "^1.1.3",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.11.18",
        "chance": "^1.1.9",
        "lodash": "^4.17.21",
        "prisma": "^4.8.0",
        "prisma-merge": "^0.2.0",
        "ts-node": "^10.0.0",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "@prisma/client": "^4.8.0",
        "dotenv": "^16.0.3"
    }
}